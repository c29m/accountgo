@model Web.Models.ViewModels.Sales.EditCustomer
@using Web.Models;
@{
    ViewBag.Title = "Add/Edit Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <h2>General</h2>
    @Html.HiddenFor(m => m.Id)
    <div class="panel panel-default panel-body">
        <div class="form-group">
            <label class="col-md-3 control-label">Name</label>
            @Html.TextBoxFor(m => m.Name)
        </div>
    </div>
    <h2>Invoicing</h2>
    <div class="panel panel-default panel-body">
        <div class="form-group">
            <label class="col-md-3 control-label">Accounts Receivable</label>
            @Html.DropDownListFor(m => m.AccountsReceivableAccountId, ModelViewHelper.Accounts(null))
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Sales Account</label>
            @Html.DropDownListFor(m => m.SalesAccountId, ModelViewHelper.Accounts(null))
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Sales Discount Account</label>
            @Html.DropDownListFor(m => m.SalesDiscountAccountId, ModelViewHelper.Accounts(null))
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Prompt Payment Discount Account</label>
            @Html.DropDownListFor(m => m.PromptPaymentDiscountAccountId, ModelViewHelper.Accounts(null))
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" name="SaveCustomer" />
    </div>
}
