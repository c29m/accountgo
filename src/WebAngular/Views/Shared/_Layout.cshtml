<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AccountGo</title>
</head>
<body>
    <div>
        @await Html.PartialAsync("_LoginPartial")
    </div>
    <div>
        @RenderBody()
    </div>

    <!-- Start AngularJS 2 scripts -->
    <script src="lib/angular2/es6-shim.js"></script>
    <script src="lib/angular2/angular2-polyfills.js"></script>
    <script src="lib/angular2/system.js"></script>
    <script>
        System.config({
            defaultJSExtensions: true,
            map: {
                'rxjs': 'lib/angular2/rxjs'
            }
        });
    </script>
    <script src="lib/angular2/angular2.dev.js"></script>
    <script src="lib/angular2/http.dev.js"></script>
    <script>
        System.import('app/boot').catch(console.log.bind(console));
    </script>
    <!-- End AngularJS 2 scripts -->

    @RenderSection("scripts", required: false)
</body>
</html>