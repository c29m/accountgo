@model Dto.Administration.GeneralLedgerSetting
<style>
  label.control-label {
    padding-top: 10px;
  }

  select.form-control {
    margin-bottom: 2px;
  }

  .btn {
    margin-right: 2px;
  }
</style>
<p>
  <div class="col-sm-9">
    <button type="button" id="btnEdit" class="btn btn-sm btn-warning btn-flat">
      <span class="fa fa-edit"></span> Edit
    </button>
  </div>
</p>
<form method="post" action="~/administration/savesettings">
  @Html.HiddenFor(model => model.Id)
  <div id="divGLSetup" class="col-sm-12">
      <div class="box">
          <div class="box-header with-border">
              <h3 class="box-title">General Ledger Setup</h3>
              <div class="box-tools pull-right">
                  <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                      <i class="fa fa-minus"></i>
                  </button>
              </div>
          </div>
          <div class="box-body">
              <div class="col-sm-6">
                  <div class="row">
                      <label class="col-sm-5" asp-for="PayableAccountId"></label>
                      <div class="col-sm-7">
                          <select class="form-control" asp-for="PayableAccountId" asp-items="@ViewBag.Accounts"></select>
                      </div>
                  </div>
                  <div class="row">
                    <label class="col-sm-5" asp-for="PurchaseDiscountAccountId"></label>
                      <div class="col-sm-7">
                          <select class="form-control" asp-for="PurchaseDiscountAccountId" asp-items="@ViewBag.Accounts"></select>
                      </div>
                  </div>
                  <div class="row">
                    <label class="col-sm-5" asp-for="GoodsReceiptNoteClearingAccountId"></label>
                      <div class="col-sm-7">
                          <select class="form-control" asp-for="GoodsReceiptNoteClearingAccountId" asp-items="@ViewBag.Accounts"></select>
                      </div>
                  </div>
              </div>
              <div class="col-sm-6">
                  <div class="row">
                    <label class="col-sm-5" asp-for="SalesDiscountAccountId"></label>
                    <div class="col-sm-7">
                        <select class="form-control" asp-for="SalesDiscountAccountId" asp-items="@ViewBag.Accounts"></select>
                    </div>
                  </div>
                  <div class="row">
                    <label class="col-sm-5" asp-for="ShippingChargeAccountId"></label>
                    <div class="col-sm-7">
                        <select class="form-control" asp-for="ShippingChargeAccountId" asp-items="@ViewBag.Accounts"></select>
                    </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <div class="col-sm-12">
    <button type="submit" id="btnSave" class="btn btn-sm btn-flat pull-left disabledControl">
      <span class="fa fa-save"></span> Save
    </button>

    <a href="~/" class="btn btn-sm btn-default btn-flat pull-left">
      <i class="fa fa-times"></i>
      Cancel
    </a>
  </div>
</form>
@section scripts{
<script src="~/js/custom.js" type="text/javascript"></script>
<script>
  $(function(){

    if (@Model.Id != 0) {
      setFormDisabled("divGLSetup");
    }

    $("#btnEdit").on("click", function() {
      $(this).removeClass("btn-warning").addClass("disabledControl");
      $("#btnSave").removeClass("disabledControl").addClass("btn-primary");
      $("#divGLSetup").removeClass("disabledControl");
      $("#PayableAccountId").focus();
    });

    $("#btnSave").on("click", function() {
      $(this).removeClass("btn-primary").addClass("disabledControl");
      $("#divGLSetup").addClass("disabledControl");
    });
  })
</script>
}