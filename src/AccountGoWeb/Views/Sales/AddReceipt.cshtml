@model AccountGoWeb.Models.Sales.AddReceipt

<div class="col-sm-6">
    <form action="~/sales/addreceipt" method="post">
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-2">Customer</div>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="CustomerId" asp-items="@ViewBag.Customers"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">Date</div>
                    <div class="col-sm-10">
                        <input class="form-control pull-right" type="date" asp-for="ReceiptDate">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">Debit</div>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="DebitAccountId" asp-items="@ViewBag.DebitAccounts"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">Credit</div>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="CreditAccountId" asp-items="@ViewBag.CreditAccounts"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">Amount</div>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Amount" type="text" placeholder="0.0 ..." />
                    </div>
                </div>
            </div>
        </div>
        <div>
            <input class="btn btn-primary btn-flat" type="submit" value="Save" />
        </div>
    </form>
</div>