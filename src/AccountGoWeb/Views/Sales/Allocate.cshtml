@model AccountGoWeb.Models.Sales.Allocate

<div class="col-md-9">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">General</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-4">Receipt No</div>
                    <div class="col-sm-8">No</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">Customer Name</div>
                    <div class="col-sm-8">@Model.CustomerId</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">Receipt Date</div>
                    <div class="col-sm-8">@Model.Date</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">Amount</div>
                    <div class="col-sm-8">@Model.Amount</div>
                </div>
            </div>
        </div>
    </div>
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Invoice</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            List of open invoices here for particular customer, and a textbox to the right to enter
            amount to each invoice row.
        </div>
    </div>
    <div>
        <input class="btn btn-primary btn-flat" type="submit" value="Save" />
    </div>
</div>